{
    "compilerOptions": {
      "lib": [
        "es6",
        "dom"
      ],
      "strict": false,
      "allowSyntheticDefaultImports": true,
      "jsx": "react-jsx",
      "module": "es6",
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "../../dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "../../node_modules/*"
        ]
      },
    },
    "include": [
      "./**/*"
    ]
}